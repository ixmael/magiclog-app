{
    "extends": "ts-node/node16/tsconfig.json",
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node",
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "target": "ESNext",
        "module": "ESNext",
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@/core/*": [
                "core/*"
            ],
            "@/services/*": [
                "services/*"
            ],
        },
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}